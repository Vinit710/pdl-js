<!-- views/product.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= product.title %> | Your Awesome Website</title>
  <link rel="stylesheet" href="/styles.css">
  <!-- Add your styles here if needed -->
  <style>
    /* Additional CSS for button and container */
    .buy-now-button {
      margin-top: 20px;
      padding: 15px 30px;
      font-size: 18px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .buy-now-button:hover {
      background-color: #0056b3;
    }

    .user-info {
      margin-top: 20px;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 5px;
      background-color: #f8f9fa;
    }

    #send-button {
      padding: 8px 20px;
      background-color: #007bff;
      color: #fdfdfd;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    #send-button:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body>
  <header>
    <nav>
      <a href="/">Home</a>
      <a href="/products">Products</a>
      <a href="/about">About</a>
      <a href="/contact">Contact</a>
    </nav>
    <h1><%= product.title %></h1>
  </header>

  <main class="product-details-page">
    <div class="product-details-container">
      <div class="product-details">
        <h2><%= product.title %></h2>
        <p><%= product.description %></p>
        <p>Price: <%= product.price %></p>
        <img src="/<%= product.image %>" alt="<%= product.title %> Image" class="product-image">
      </div>
    </div>

    <!-- Chat-like functionality on the right side -->
    <div class="chat-container">
      <p class="chat-prompt">Ask any queries</p>
      <div class="chat-messages" id="chat-messages"></div>
      <div class="chat-input-container">
        <textarea id="user-input" placeholder="Type your message"></textarea>
        <button id="send-button" onclick="sendMessage()">Send</button>
      </div>
    </div>

    <!-- User Information Container -->
    <div class="user-info" id="user-info" style="display: none;">
      <h2>User Information</h2>
      <p>Name: <%= product.user.name %></p>
      <p>Email: <%= product.user.email %></p>
      <p>Phone: <%= product.user.phone %></p>
    </div>
    
    <!-- Buy Now button -->
    <button onclick="toggleUserInfo()" class="buy-now-button">Buy Now</button>
    <p id="contact-info" style="display: none; color: red; font-size: 25px;">Contact the user further to make the deal!!!</p>

  </main>

  <div class="footer">
    <a href="https://www.instagram.com/" target="_blank">Instagram</a>
    <a href="https://github.com/Vinit710/pdl-js/tree/main" target="_blank">GitHub</a>
    <a href="https://www.yourcollegewebsite.com/" target="_blank">College Website</a>
  </div>

  <script>
    function sendMessage() {
      var userInput = document.getElementById('user-input').value;
      var chatMessages = document.getElementById('chat-messages');
      chatMessages.innerHTML += '<p class="chat-message user-message"><strong>User:</strong> ' + userInput + '</p>';
      document.getElementById('user-input').value = '';
    }

    function toggleUserInfo() {
      var userInfo = document.getElementById('user-info');
      var contactInfo = document.getElementById('contact-info'); // Added

      if (userInfo.style.display === 'none') {
        userInfo.style.display = 'block';
        contactInfo.style.display = 'block'; // Added
      } else {
        userInfo.style.display = 'none';
        contactInfo.style.display = 'none'; // Added
      }
    }
  </script>
</body>
</html>
